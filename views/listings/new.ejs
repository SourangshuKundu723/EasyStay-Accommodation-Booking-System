<% layout("layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="heading">Create a new listing</h2>
            <form method="post" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
                    <div class="valid-feedback" aria-live="assertive">Title looks good!</div>
                    <div class="invalid-feedback" aria-live="assertive">Please enter a title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
                    <div class="valid-feedback" aria-live="assertive">Description looks good!</div>
                    <div class="invalid-feedback" aria-live="assertive">Please provide a short description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="enter price" type="number" min="1" class="form-control" required>
                        <div class="valid-feedback" aria-live="assertive">Price looks good!</div>
                        <div class="invalid-feedback" aria-live="assertive">Please enter a valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
                        <div class="valid-feedback" aria-live="assertive">Location looks good!</div>
                        <div class="invalid-feedback" aria-live="assertive">Please enter the location</div>
                    </div>
                </div>
                <div class="mb-4">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
                    <div class="valid-feedback" aria-live="assertive">Country name looks good!</div>
                    <div class="invalid-feedback" aria-live="assertive">Please enter the country name</div>
                </div>
                <div class="btns mt-3 mb-4">
                    <button class="btn btn-dark add-btn"><i class="fa-solid fa-plus"></i> Add</button>
                    <a href="/listings" class="btn btn-dark"><i class="fa-solid fa-xmark"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>